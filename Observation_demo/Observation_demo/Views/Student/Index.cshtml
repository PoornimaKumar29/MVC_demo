@model List<Observation_demo.Models.Student>
@{
    ViewData["Title"] = "Student Management";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Student Management</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Branch</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var stu in Model)
            {
                <tr>
                    <td>@stu.Id</td>
                    <td>@stu.Name</td>
                    <td>@stu.Branch</td>
                    <td>@stu.Gender</td>
                    <td>
                        <a class="btn btn-sm btn-warning me-2" href="@Url.Action("Edit", "Student", new { id = stu.Id })">Edit</a>
                        <a class="btn btn-sm btn-danger" href="@Url.Action("Delete", "Student", new { id = stu.Id })">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <hr class="my-4" />

    <h4 class="mb-3 text-success">Add New Student</h4>
    <form method="post" action="@Url.Action("Create", "Student")">
        <div class="row g-3">
            <div class="col-md-2">
                <label class="form-label">ID</label>
                <input type="number" class="form-control" name="id" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Branch</label>
                <input type="text" class="form-control" name="branch" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Gender</label>
                <select class="form-select" name="gender" required>
                    <option selected disabled>Choose...</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-primary w-100">Add</button>
            </div>
        </div>
    </form>
</div>
