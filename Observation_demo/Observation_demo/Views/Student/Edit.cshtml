@model Observation_demo.Models.Student
@{
    ViewData["Title"] = "Edit Student";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <h2 class="mb-4 text-primary">Edit Student</h2>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success">
            @TempData["Message"]
        </div>
    }

    <form method="post">
        <div class="row g-3">
            <div class="col-md-2">
                <label class="form-label">ID</label>
                <input type="number" class="form-control" name="id" value="@Model.Id" readonly />
            </div>
            <div class="col-md-3">
                <label class="form-label">Name</label>
                <input type="text" class="form-control" name="name" value="@Model.Name" required />
            </div>
            <div class="col-md-3">
                <label class="form-label">Branch</label>
                <input type="text" class="form-control" name="branch" value="@Model.Branch" required />
            </div>
            <div class="col-md-2">
                <label class="form-label">Gender</label>
                <select class="form-select" asp-for="Gender" required>
                    <option selected disabled>Choose...</option>
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                    <option value="Other">Other</option>
                </select>
            </div>


            <div class="col-md-2 align-self-end">
                <button type="submit" class="btn btn-primary w-100">Update</button>
            </div>
        </div>
    </form>
</div>
